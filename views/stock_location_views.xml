<odoo>
    <!-- Liste des emplacements -->
    <record id="view_stock_location_list" model="ir.ui.view">
        <field name="name">stock.location.list</field>
        <field name="model">stock.location.custom</field>
        <field name="arch" type="xml">
            <list string="Emplacements de Stock">
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- Formulaire des emplacements -->
    <record id="view_stock_location_form" model="ir.ui.view">
        <field name="name">stock.location.form</field>
        <field name="model">stock.location.custom</field>
        <field name="arch" type="xml">
            <form string="Emplacement de Stock">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action pour ouvrir les emplacements -->
    <record id="action_stock_locations" model="ir.actions.act_window">
        <field name="name">Emplacements de Stock</field>
        <field name="res_model">stock.location.custom</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
