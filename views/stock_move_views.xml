<odoo>
    <!-- Formulaire des mouvements -->
    <record id="view_stock_move_form" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move.custom</field>
        <field name="arch" type="xml">
            <form string="Mouvement de Stock">
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="location_from_id"/> 
                        <field name="location_to_id"/> 
                        <field name="scheduled_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Liste des mouvements -->
    <record id="view_stock_move_list" model="ir.ui.view">
        <field name="name">stock.move.list</field>
        <field name="model">stock.move.custom</field>
        <field name="arch" type="xml">
            <list string="Mouvements de Stock" editable="bottom"
                  decoration-danger="scheduled_date == context_today()">
                <field name="product_id"/>
                <field name="quantity"/>
                <field name="location_from_id"/>
                <field name="location_to_id"/>
                <field name="scheduled_date"/>
            </list>
        </field>
    </record>

    <!-- Vue Calendrier -->
    <record id="view_stock_move_calendar" model="ir.ui.view">
        <field name="name">stock.move.calendar</field>
        <field name="model">stock.move.custom</field>
        <field name="arch" type="xml">
            <calendar string="Mouvements de Stock" date_start="scheduled_date">
                <field name="product_id"/>
            </calendar>
        </field>
    </record>

    <!-- Action pour les mouvements -->
    <record id="action_stock_moves" model="ir.actions.act_window">
        <field name="name">Mouvements de Stock</field>
        <field name="res_model">stock.move.custom</field>
        <field name="view_mode">list,form,calendar</field>
    </record>
</odoo>
